<!DOCTYPE html>
<html>

<style>
  body {
        background-image: url(https://wallpapercave.com/dwp1x/wp1929738.jpg), radial-gradient(circle at center,#efaa2b 0%, rgb(51, 51, 51) 50%, rgb(17, 17, 17) 100%);
        background-repeat: no-repeat;
        background-size: cover;
        background-attachment: fixed;
    }

  h1 {
    font-size: 36px;
    text-align: center;
    font-weight: 600;
    color: white;
    /* background-image: linear-gradient(to left, #009879, #1cd1ad); */
    background-clip: text;
    -webkit-background-clip: text;
  }

  table {
    border-collapse: collapse;
    margin: 0 auto;
    font-size: 0.9em;
    font-family: sans-serif;
    min-width: 400px;
    box-shadow: 0 0 20px rgba(0, 0, 0, 0.15);
    border-radius: 10px;
    table-layout: fixed;
  }

  thead tr {
    background-image: linear-gradient(to right, #efaa2b, #f4c35c);
    color: #ffffff;
    text-align: left;
  }

  thead th {
    border-top: 2px solid #d69418;
    border-right: 2px solid #d69418;
  }

  td,
  th {
    padding: 12px 15px;
    border-left: 2px solid #d69418;
    border-right: 2px solid #d69418;
  }

  tbody tr {
    color: #009879;
    border-bottom: 2px solid #bd7b00;
  }

  tbody tr:nth-of-type(even) {
    color: #ffffff;
    background-image: linear-gradient(to right, #efaa2b, #f4c35c);
    /* background-color: #efaa2b; */
  }

  tbody tr:nth-of-type(odd) {
    color: #ffffff;
    background-image: linear-gradient(to right, #f4c35c, #efaa2b);
    /* background-color: #f4c35c; */
  }

  tbody tr:last-of-type {
    border-bottom: 2px solid #d69418;
  }

  #stats-table {
    margin: 0 auto;
  }

  .sub-button {
    background-color: #efaa2b;
    border: none;
    color: white;
    padding: 15px 32px;
    text-decoration: none;
    display: inline-block;
    font-size: 16px;
  }

  .sub-button:hover {
    background: #f2bc5d;
  }

  td {
    border: 2px solid #d69418;
    padding: 8px;
    text-align: center;
  }

  td input[type="number"] {
    text-align: center;
  }

  input[type=number]::-webkit-outer-spin-button,
  input[type=number]::-webkit-inner-spin-button {
    -webkit-appearance: none;
    margin: 0;
  }
</style>

<head>
  <title>My Website</title>
  <header>
    <%- include('./partials/NavBar.ejs'); %>
  </header>
</head>

<body>
  <h1>Insert Game</h1>
  <form action="/submitGame" method="POST">
    <table>
      <thead>
        <tr>
          <th colspan="2">Frame 1</th>
          <th colspan="2">Frame 2</th>
          <th colspan="2">Frame 3</th>
          <th colspan="2">Frame 4</th>
          <th colspan="2">Frame 5</th>
          <th colspan="2">Frame 6</th>
          <th colspan="2">Frame 7</th>
          <th colspan="2">Frame 8</th>
          <th colspan="2">Frame 9</th>
          <th colspan="3">Frame 10</th>
        </tr>
      </thead>
      <tbody>
        <% for (let i=0; i < 9; i++) { %>
          <td><input type="text" name="frame<%= i %>_roll1" required style="width: 30%"></td>
          <td><input type="text" name="frame<%= i %>_roll2" style="width: 30%"></td>
          <% } %>
            <td><input type="text" name="frame9_roll1" required style="width: 30%"></td>
            <td><input type="text" name="frame9_roll2" required style="width: 30%"></td>
            <td><input type="text" name="frame9_roll3" style="width: 30%"></td>
      </tbody>
    </table>
    <div style="padding-top: 20px; text-align: center;">
      <button class="sub-button" type="submit">Submit</button>
    </div>
  </form>
</body>

</html>