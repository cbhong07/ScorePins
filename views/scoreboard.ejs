<!DOCTYPE html>
<html>
<style>
    body {
        background-image: url(https://wallpapercave.com/dwp1x/wp1929738.jpg), radial-gradient(circle at center,#efaa2b 0%, rgb(51, 51, 51) 50%, rgb(17, 17, 17) 100%);
        background-repeat: no-repeat;
        background-size: cover;
        background-attachment: fixed;
    }

    h1 {
        font-size: 36px;
        font-weight: 600;
        color: white;
        /* background-image: linear-gradient(to left, #009879, #1cd1ad); */
        background-clip: text;
        -webkit-background-clip: text;
    }

    table {
        border-collapse: collapse;
        font-size: 0.9em;
        font-family: sans-serif;
        min-width: 400px;
        box-shadow: 0 0 20px rgba(0, 0, 0, 0.15);
    }

    thead tr {
        background-image: linear-gradient(to right, #efaa2b, #f4c35c);
        color: black;
        text-align: left;
    }

    thead th {
        border-top: 2px solid #d69418;
        border-right: 2px solid #d69418;
    }

    td,
    th {
        padding: 12px 15px;
        border-left: 2px solid #d69418;
        border-right: 2px solid #d69418;
    }

    tbody tr:nth-of-type(even) {
        color: black;
        background-image: linear-gradient(to right, #efaa2b, #f4c35c);
        /* background-color: #efaa2b; */
    }

    tbody tr:nth-of-type(odd) {
        color: black;
        background-image: linear-gradient(to right, #f4c35c, #efaa2b);
        /* background-color: #f4c35c; */
    }

    tbody tr:last-of-type {
        border-bottom: 2px solid #d69418;
    }

</style>

<head>
    <script src="https://code.jquery.com/jquery-1.10.2.js"></script>
    <title>My Website</title>
    <header>
        <%- include('./partials/NavBar.ejs'); %>
    </header>
</head>

<body>
    <% if (message) { %>
        <script>
            alert('<%= message %>');
        </script>
        <% } %>
            <h1>Best Games</h1>
            <table>
                <thead>
                    <tr>
                        <th>Date</th>
                        <th>User</th>
                        <th colspan="2">Frame 1</th>
                        <th colspan="2">Frame 2</th>
                        <th colspan="2">Frame 3</th>
                        <th colspan="2">Frame 4</th>
                        <th colspan="2">Frame 5</th>
                        <th colspan="2">Frame 6</th>
                        <th colspan="2">Frame 7</th>
                        <th colspan="2">Frame 8</th>
                        <th colspan="2">Frame 9</th>
                        <th colspan="3">Frame 10</th>
                        <th>Score</th>
                    </tr>
                </thead>
                <tbody>
                    <%- topGames %>
                </tbody>
            </table>
            <h1>Highest Averages</h1>
            <table>
                <thead>
                    <tr>
                        <th>User</th>
                        <th>Average</th>
                        <th>Date of High Score</th>
                        <th>Highest Score</th>
                    </tr>
                </thead>
                <tbody>
                    <%- topAverages %>
                </tbody>
            </table>
</body>

</html>