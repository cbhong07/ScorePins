<!DOCTYPE html>
<html>
<style>
    body {
        background-image: url(https://wallpapercave.com/dwp1x/wp1929738.jpg), radial-gradient(circle at center, #efaa2b 0%, rgb(51, 51, 51) 50%, rgb(17, 17, 17) 100%);
        background-repeat: no-repeat;
        background-size: cover;
        background-attachment: fixed;
    }

    h1 {
        font-size: 36px;
        text-align: center;
        font-weight: 600;
        color: white;
        /* background-image: linear-gradient(to left, #009879, #1cd1ad); */
        background-clip: text;
        -webkit-background-clip: text;
    }

    table {
        border-collapse: collapse;
        margin: 0 auto;
        font-size: 0.9em;
        font-family: sans-serif;
        min-width: 400px;
        box-shadow: 0 0 20px rgba(0, 0, 0, 0.15);
        border-radius: 10px;
    }

    thead tr {
        background-image: linear-gradient(to right, #efaa2b, #f4c35c);
        color: black;
        text-align: left;
    }

    thead th {
        border-top: 2px solid #d69418;
        border-right: 2px solid #d69418;
    }

    td,
    th {
        padding: 12px 15px;
        border-left: 2px solid #d69418;
        border-right: 2px solid #d69418;
    }

    tbody tr:nth-of-type(even) {
        color: black;
        background-image: linear-gradient(to right, #efaa2b, #f4c35c);
        /* background-color: #efaa2b; */
    }

    tbody tr:nth-of-type(odd) {
        color: black;
        background-image: linear-gradient(to right, #f4c35c, #efaa2b);
        /* background-color: #f4c35c; */
    }

    tbody tr:last-of-type {
        border-bottom: 2px solid #d69418;
    }

    .insert-button {
        background-color: #efaa2b;
        border: none;
        color: black;
        padding: 15px 32px;
        text-decoration: none;
        display: inline-block;
        font-size: 16px;
    }

    .insert-button:hover {
        background: #f2bc5d;
    }
</style>

<head>
    <script src="https://code.jquery.com/jquery-1.10.2.js"></script>
    <title>My Website</title>
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/v/dt/dt-1.10.25/datatables.min.css" />
    <header>
        <%- include('./partials/NavBar.ejs'); %>
    </header>
    <style>
        .dataTables_wrapper .dataTables_length,
        .dataTables_wrapper .dataTables_filter {
            color: white;
        }

        .dataTables_wrapper input[type="search"],
        .dataTables_wrapper .dataTables_length select {
            background-color: white;
        }

        .dataTables_info,
        .dataTables_paginate {
            color: white !important;
        }

        .dataTables_wrapper .dataTables_paginate .paginate_button {
            color: white !important;
            border: 1px solid rgb(17, 17, 17) !important;
            background-color: rgb(17, 17, 17) !important;
        }
    </style>
</head>

<body>
    <% if (message) { %>
        <script>
            alert('<%= message %>');
        </script>
        <% } %>
            <div style="text-align: right; padding-right: 20px;">
                <div style="display: inline-block; padding-top: 30px;">
                    <form action="/insertGame" method="POST" style="text-align: center;">
                        <button class="insert-button" type="submit" style="border-radius: 10px;">Insert Game</button>
                    </form>
                </div>
            </div>
            <h1 id="stats-head">Stats</h1>

            <div>
                <table id="stats-table">
                    <thead>
                        <tr>
                            <th>Average Score</th>
                            <th>Average Strikes</th>
                            <th>Average Spares</th>
                            <th>Average First Ball</th>
                        </tr>
                    </thead>
                    <tbody>
                        <%- averages %>
                    </tbody>
                </table>
            </div>
            <div>
                <table id="games-table" class="display">
                    <h1>Games</h1>
                    <thead>
                        <tr>
                            <th>Date</th>
                            <th colspan="2">Frame 1</th>
                            <th colspan="2">Frame 2</th>
                            <th colspan="2">Frame 3</th>
                            <th colspan="2">Frame 4</th>
                            <th colspan="2">Frame 5</th>
                            <th colspan="2">Frame 6</th>
                            <th colspan="2">Frame 7</th>
                            <th colspan="2">Frame 8</th>
                            <th colspan="2">Frame 9</th>
                            <th colspan="3">Frame 10</th>
                            <th>Score</th>
                        </tr>
                    </thead>
                    <tbody>
                        <%- tableBody %>
                    </tbody>
                </table>
            </div>
            <script type="text/javascript" src="https://cdn.datatables.net/v/dt/dt-1.10.25/datatables.min.js"></script>
            <script type="text/javascript">
                $(document).ready(function () {
                    $('#games-table').DataTable({
                    });
                });
            </script>
</body>

</html>