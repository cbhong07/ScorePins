<!-- navigation.html -->
<style>
  /* .header {
    color: white;
    display: inline-block;
    font-size: 32px;
  } */

  .topnav {
    background: linear-gradient(to right, rgb(17, 17, 17) 0%, rgb(51, 51, 51) 25%, #efaa2b 50%, rgb(51, 51, 51) 75%, rgb(17, 17, 17) 100%);
    overflow: hidden;
  }

  .button {
    background-color: transparent;
    border: none;
    color: white;
    padding: 15px 32px;
    text-decoration: none;
    display: inline-block;
    font-size: 16px;
    height: 100%;
  }

  .button:hover {
    background: #f2bc5d;
  }

  .form-wrapper {
    display: flex;
  }

  .dropdown {
    float: left;
    overflow: hidden;
    height: 100%;
  }

  .dropdown-content {
    display: none;
    position: absolute;
    background-color: rgb(17, 17, 17);
    min-width: 160px;
    box-shadow: 0px 8px 16px 0px rgba(0, 0, 0, 0.2);
    padding: 12px 16px;
    z-index: 1;
    right: 8px;
  }

  .dropdown-content button {
    background-color: transparent;
    border: none;
    color: white;
    padding: 15px 32px;
    text-decoration: none;
    display: inline-block;
    font-size: 16px;
  }

  .dropdown-content button:hover {
    background-color: #f2bc5d;
  }

  .dropdown:hover .dropdown-content {
    display: block;
  }

  .dropdown .dropbtn {
    background-color: transparent;
    border: none;
    color: white;
    padding: 15px 32px;
    text-decoration: none;
    display: inline-block;
    font-size: 16px;
    height: 100%;
  }

  img {
    height: 100%;
    width: 175px;
    align-self: flex-start;
  }
</style>

<div class="topnav" style="display: flex;">
  <img src="images/scorepins_logo.png">
  <div class="form-wrapper">
    <form action="/homepage" method="POST">
      <button class="button" type="submit">Home</button>
    </form>
    <form action="/simulation" method="POST">
      <button class="button" type="submit">Simulation</button>
    </form>
    <form action="/stats" method="POST">
      <button class="button" type="submit">Stats</button>
    </form>
    <form action="/scoreboard" method="POST">
      <button class="button" type="submit">Scoreboard</button>
    </form>
    <form action="/brackets" method="POST">
      <button class="button" type="submit">Brackets</button>
    </form>
    <form action="/userSearch" method="POST">
      <button class="button" type="submit">Search</button>
    </form>
  </div>
  <div class="topnav-right" style="margin-left: auto;">
    <div class="dropdown">
      <button class="dropbtn">
        <%= user %>
      </button>
      <div class="dropdown-content">
        <form action="/changePass" method="POST">
          <button type="submit">Change Password</button>
        </form>
        <form action="/logout" method="POST">
          <button type="submit">Logout</button>
        </form>
      </div>
    </div>
  </div>
</div>